# Configurações otimizadas para Render.com com 512MB de RAM
# Este arquivo contém as otimizações específicas para deployment no Render

# Configurações de ambiente para Render
FLASK_ENV=production
FLASK_DEBUG=false

# Configurações de memória otimizadas
WEB_CONCURRENCY=1
WORKER_CONNECTIONS=25
WORKER_TIMEOUT=20
MAX_REQUESTS=50
MAX_REQUESTS_JITTER=10

# Configurações Python otimizadas
PYTHONHASHSEED=1
PYTHONOPTIMIZE=2
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Configurações específicas da aplicação
MAX_ROWS_PER_REQUEST=15
BATCH_SIZE=5
MAX_UPLOAD_SIZE_MB=1
CACHE_TIMEOUT=30

# Configurações de garbage collection
GC_THRESHOLD_0=100
GC_THRESHOLD_1=2
GC_THRESHOLD_2=2
